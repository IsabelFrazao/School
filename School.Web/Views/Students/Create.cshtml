@model School.Web.Models.StudentViewModel

@{
    ViewData["Title"] = "Create";
}

<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb-area bg-img" style="background-image: url(../img/bg-img/breadcumb.jpg);">
    <div class="bradcumbContent">
        <h2>Create Student</h2>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->
<!-- ##### About Us Area Start ##### -->
<section class="about-us-area mt-50 section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center mx-auto wow fadeInUp" data-wow-delay="300ms">
                    <h3>Create Student</h3>
                </div>
            </div>
        </div>
        <section class="contact-area">
            <div class="contact-content">
                <form asp-action="Create" method="post" enctype="multipart/form-data" onsubmit="validation()">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-12 col-md-6 wow fadeInUp" data-wow-delay="400ms">
                            <!--BANNER START-->
                            <div class="panel single-accordion">
                                <h6>
                                    <a class="collapsed" style="text-align:center;">
                                        General Information
                                    </a>
                                </h6>
                            </div>
                            <!--BANNER END-->
                            <br />
                            <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms" style="height:850px;">
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-3">
                                        <img id="imgpreview" src="~/images/blank.jpg" alt="image" style="width:200px; height:300px; max-width:100%; height:auto" />
                                    </div>
                                    <div class="col-md-8">
                                        <label asp-for="Id" class="form-label"><b>Student Number:</b></label>
                                        <label asp-for="Id" class="form-label">@ViewBag.idCount</label>
                                        <input asp-for="ImageFile" class="form-control" type="file" onchange="previewimg(event)" />
                                    </div>
                                </div>
                                <label asp-for="FullName" class="form-label"><b>Name:</b></label>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                                <input asp-for="FullName" class="form-control" id="name" placeholder="Name">
                                <label asp-for="Gender" class="form-label"><b>Gender:</b></label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                                <div class="form-check" style="height:48px;">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <br />
                                            @Html.RadioButtonFor(model => model.Gender, "Male")<b> Male</b>
                                        </div>
                                        <div class="col-md-8">
                                            <br />
                                            @Html.RadioButtonFor(model => model.Gender, "Female")<b> Female</b>
                                        </div>
                                    </div>
                                </div><br />
                                @{
                                    var minDate = new DateTime(DateTime.Now.Year - 65, DateTime.Now.Month - (65 / 13), DateTime.Now.Day - (65 / 365));
                                    var maxDate = new DateTime(DateTime.Now.Year - 18, DateTime.Now.Month - (18 / 13), DateTime.Now.Day - (18 / 365));
                                    var defaultDate = DateTime.Now.Date;
                                }
                                <label asp-for="DateOfBirth" class="form-label"><b>Date of Birth:</b></label>
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                <ejs-datetimepicker ejs-for="DateOfBirth" id="datetimepicker" value="@defaultDate" min="@minDate" max="@maxDate" format="dd-MM-yyyy" cssClass="e-filled"></ejs-datetimepicker>
                                <div style="height:3px;"><h6></h6></div>
                                <label asp-for="Address" class="form-label"><b>Address:</b></label>
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <input asp-for="Address" type="text" class="form-control" id="address" placeholder="Address">
                                <label asp-for="ZipCode" class="form-label"><b>Zip-Code:</b></label>
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                                <ejs-maskedtextbox id="mask1" ejs-for="ZipCode" mask="0000-000" placeholder="0000-000" cssClass="e-filled" floatLabelType="Never"></ejs-maskedtextbox>
                                <div style="height:2px;"><h6></h6></div>
                                <label asp-for="City" class="form-label"><b>City:</b></label>
                                <span asp-validation-for="City" class="text-danger"></span>
                                <input asp-for="City" type="text" class="form-control" id="city" placeholder="City">
                            </div>
                        </div>
                        <div class="col-12 col-md-6 wow fadeInUp" data-wow-delay="500ms">
                            <!--BANNER START-->
                            <div class="panel single-accordion">
                                <h6>
                                    <a class="collapsed" style="text-align:center;">
                                        Detailed Information
                                    </a>
                                </h6>
                            </div>
                            <!--BANNER END-->
                            <br />
                            <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms" style="height:850px;">
                                <label asp-for="IdentificationNumber" class="form-label"><b>Identification Number:</b></label>
                                <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
                                <br />
                                <ejs-maskedtextbox id="mask2" ejs-for="IdentificationNumber" mask="00000000-0-LL0" placeholder="00000000-0-XX0" cssClass="e-filled" floatLabelType="Never"></ejs-maskedtextbox>
                                <div style="height:2px;"><h6></h6></div>
                                <label asp-for="TaxNumber" class="form-label"><b>Tax Number:</b></label>
                                <span asp-validation-for="TaxNumber" class="text-danger"></span>
                                <ejs-maskedtextbox id="mask3" ejs-for="TaxNumber" mask="000000000" placeholder="000000000" cssClass="e-filled" floatLabelType="Never"></ejs-maskedtextbox>
                                <div style="height:2px;"><h6></h6></div>
                                <label asp-for="SSNumber" class="form-label"><b>Social Security Number:</b></label>
                                <span asp-validation-for="SSNumber" class="text-danger"></span>
                                <ejs-maskedtextbox id="mask4" ejs-for="SSNumber" mask="00000000000" placeholder="00000000000" cssClass="e-filled" floatLabelType="Never"></ejs-maskedtextbox>
                                <div style="height:3px;"><h6></h6></div>
                                <label asp-for="NHSNumber" class="form-label"><b>National Health Service Number:</b></label>
                                <span asp-validation-for="NHSNumber" class="text-danger"></span>
                                <ejs-maskedtextbox id="mask5" ejs-for="NHSNumber" mask="000000000" placeholder="000000000" cssClass="e-filled" floatLabelType="Never"></ejs-maskedtextbox>
                                <div style="height:4px;"><h6></h6></div>
                                <label asp-for="MaritalStatus" class="form-label"><b>Marital Status:</b></label>
                                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                                <div class="form-check" style="height:48px;">
                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.RadioButtonFor(model => model.MaritalStatus, "Single")<b> Single</b>
                                        </div>
                                        <div class="col-md-8">
                                            @Html.RadioButtonFor(model => model.MaritalStatus, "Married")<b> Married</b>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.RadioButtonFor(model => model.MaritalStatus, "Divorced")<b> Divorced</b>
                                        </div>
                                        <div class="col-md-8">
                                            @Html.RadioButtonFor(model => model.MaritalStatus, "Widowed")<b> Widowed</b>
                                        </div>
                                    </div>
                                </div><br />
                                <label asp-for="Nationality" class="form-label"><b>Nationality:</b></label>
                                <span asp-validation-for="Nationality" class="text-danger"></span>
                                <input asp-for="Nationality" type="text" class="form-control" id="nationality" placeholder="Nationality">
                                <label asp-for="Telephone" class="form-label"><b>Telephone Number:</b></label>
                                <span asp-validation-for="Telephone" class="text-danger"></span>
                                <ejs-maskedtextbox id="mask6" ejs-for="Telephone" mask="000000000" placeholder="000000000" cssClass="e-filled" floatLabelType="Never"></ejs-maskedtextbox>
                                <div style="height:2px;"><h6></h6></div>
                                <label asp-for="Email" class="form-label"><b>E-mail:</b></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="E-mail">
                            </div>
                        </div>
                        <div class="col-12 wow fadeInUp" data-wow-delay="500ms">
                            <h6><br /></h6>
                        </div>
                        <div class="col-12 wow fadeInUp" data-wow-delay="500ms">
                            <!--BANNER START-->
                            <div class="panel single-accordion">
                                <h6>
                                    <a class="collapsed" style="text-align:center;">
                                        School Information
                                    </a>
                                </h6>
                            </div>
                            <!--BANNER END-->
                            <br />
                            <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms">
                                <label asp-for="CourseId" class="form-label"><b>Course:</b></label>
                                <label id="courseValidator" class="text-danger"></label>
                                <ejs-dropdownlist id="courses" ejs-for="CourseId" dataSource="Model.Courses" cssClass="e-filled" placeholder="Select a Course" popupHeight="230px">
                                    <e-dropdownlist-fields text="Name" value="Id"></e-dropdownlist-fields>
                                </ejs-dropdownlist>
                                <label class="form-label"><b>Schedule:</b></label>
                                <label id="scheduleValidator" class="text-danger"></label>
                                <ejs-dropdownlist id="schedules" ejs-for="ScheduleId" dataSource="Model.Schedules" cssClass="e-filled" placeholder="Select a Schedule" popupHeight="230px" change="scheduleChange">
                                    <e-dropdownlist-fields text="Shift" value="Id"></e-dropdownlist-fields>
                                </ejs-dropdownlist>
                                <label class="form-label"><b>Class:</b></label>
                                <label id="classValidator" class="text-danger"></label>
                                <ejs-dropdownlist id="classes" ejs-for="ClassId" dataSource="Model.Classes" cssClass="e-filled" placeholder="Select a Class" popupHeight="230px">
                                    <e-dropdownlist-fields text="Name" value="Id"></e-dropdownlist-fields>
                                </ejs-dropdownlist>
                                <label class="form-label"><b>School Year:</b></label>
                                <label id="schoolyearValidator" class="text-danger"></label>
                                <ejs-dropdownlist id="schoolyears" ejs-for="SchoolYear" dataSource="Model.SchoolYears" cssClass="e-filled" placeholder="Select a School Year" popupHeight="230px">
                                    <e-dropdownlist-fields text="SchoolYear"></e-dropdownlist-fields>
                                </ejs-dropdownlist>
                            </div>
                        </div>
                        <!-- ##### About Us Area End ##### -->
                        <input asp-action="Create" class="btn academy-btn mt-30" type="submit" value="Create" style="margin-left:33%" />
                        <a asp-action="Index" class="btn academy-btn mt-30" style="margin-left:3%">Back</a>
                    </div>
                </form>
            </div>
        </section>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}    
}

<script>
    function validation() {
        var course = document.getElementById('courses').ej2_instances[0];
        var courseValidator = document.getElementById('courseValidator');

        var schedule = document.getElementById('schedules').ej2_instances[0];
        var scheduleValidator = document.getElementById('scheduleValidator');

        var classes = document.getElementById('classes').ej2_instances[0];
        var classValidator = document.getElementById('classValidator');

        var schoolyear = document.getElementById('schoolyears').ej2_instances[0];
        var schoolyearValidator = document.getElementById('schoolyearValidator');

        debugger

        if (course.properties.value == 0) {
            //alert("Must Select a Coordinator");
            courseValidator.innerText = "Field Course is mandatory";
            event.preventDefault();
        }
        if (schedule.properties.value == 0) {
            //alert("Must Select a Coordinator");
            scheduleValidator.innerText = "Field Schedule is mandatory";
            event.preventDefault();
        }
        if (classes.properties.value == 0) {
            //alert("Must Select a Coordinator");
            classValidator.innerText = "Field Class is mandatory";
            event.preventDefault();
        }
        if (schoolyear.properties.value == null) {
            //alert("Must Select a Coordinator");
            schoolyearValidator.innerText = "Field School Year is mandatory";
            event.preventDefault();
        }
    }
</script>

<script>
    var previewimg = function (event) {
        var result = document.getElementById("imgpreview");
        result.src = URL.createObjectURL(event.target.files[0]);
    }
</script>
<style>
    .e-mask.e-filled .e-control.e-maskedtextbox {
        height: 54px;
    }

    #datetimepicker {
        height: 54px;
    }
</style>

<script type="text/javascript">
    function scheduleChange() {
        var course = document.getElementById('courses').ej2_instances[0];
        var schedule = document.getElementById('schedules').ej2_instances[0];
        var classes = document.getElementById('classes').ej2_instances[0];
        var schoolyear = document.getElementById('schoolyears').ej2_instances[0];
        // disable the state DropDownList
        course.enabled = true;
        // frame the query based on selected value in country DropDownList.
        //var tempQuery1 = new ej.data.Query().where('CourseId', 'equal', courses.value, 'and', 'ScheduleId', 'equal', schedule.value)/*.ej.data.Query().where('ScheduleId', 'equal', schedule.value)*/;

        var tempQuery1 = ej.Query().where(ej.Predicate("CourseId", ej.FilterOperators.equal, courses.value).and("ScheduleId", ej.FilterOperators.equals, schedule.value));

        debugger
        // set the framed query based on selected value in country DropDownList.
        classes.query = tempQuery1;
        //schoolyear.value = course.listData[0]['SchoolYear'].value;

        schoolyear.query = ej.data.Query().select(['SchoolYear']).value;

        debugger
        // set null value to state DropDownList text property
        classes.text = null;
        schoolyear.text = null;
        schoolyear.enabled = true;
        // bind the property changes to City DropDownList
        classes.dataBind();
        schoolyear.dataBind();
    }
</script>