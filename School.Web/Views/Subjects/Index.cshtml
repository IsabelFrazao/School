@model IEnumerable<School.Web.Data.Entities.Subject>

@{
    ViewData["Title"] = "Home";
}

<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb-area bg-img" style="background-image: url(../img/bg-img/breadcumb.jpg);">
    <div class="bradcumbContent">
        <h2>Search Subject</h2>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->
<!-- ##### About Us Area Start ##### -->
<section class="about-us-area mt-50 section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center mx-auto wow fadeInUp" data-wow-delay="300ms">
                    <h3>Search Subject</h3>
                </div>
            </div>
        </div>
        <section class="contact-area">
            <div class="contact-content">
                <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms">
                    <a asp-action="CreateIndex" class="btn academy-btn mt-30" style="margin-left:25%">Create Subjects</a>
                    <a asp-action="Upload" class="btn academy-btn mt-30" style="margin-left:10%">Upload Subjects</a>
                    <div class="col-12 wow fadeInUp" data-wow-delay="500ms">
                        <h6><br /></h6>
                    </div>
                    @*<div class="blog-post-search-widget mb-30">
            <form action="#" method="post">
                <input type="search" name="search" id="Search" placeholder="Search">
                <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
            </form>
        </div>*@
                </div>
                <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms">
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" style="width: 100%" id="MyTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Code)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Field)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.QNQLevel)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Component)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Field)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.QNQLevel)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Component)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

@section Scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}

