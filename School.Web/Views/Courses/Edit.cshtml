@model School.Web.Models.CourseViewModel
@{
    ViewData["Title"] = "Edit";
}

<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb-area bg-img" style="background-image: url(../../img/bg-img/breadcumb.jpg);">
    <div class="bradcumbContent">
        <h2>Edit Course</h2>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->
<!-- ##### About Us Area Start ##### -->
<section class="about-us-area mt-50 section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center mx-auto wow fadeInUp" data-wow-delay="300ms">
                    <h3>Edit Course</h3>
                </div>
            </div>
        </div>
        <section class="contact-area">
            <div class="contact-content">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-12 wow fadeInUp" data-wow-delay="500ms">
                            <!--BANNER START-->
                            <div class="panel single-accordion">
                                <h6>
                                    <a class="collapsed" style="text-align:center;">
                                        General Information
                                    </a>
                                </h6>
                            </div>
                            <!--BANNER END-->
                            <br />
                            <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms" style="height:650px;">
                                <label class="form-label"><b>Area:</b></label>
                                <span asp-validation-for="Field" class="text-danger"></span>
                                <ejs-dropdownlist id="areas" ejs-for="Field" dataSource="Model.Fields" cssClass="e-filled" placeholder="@Model.Field" popupHeight="230px" change="valueChange">
                                    <e-dropdownlist-fields text="Field"></e-dropdownlist-fields>
                                </ejs-dropdownlist>
                                <label asp-for="Name" class="form-label"><b><br />Name:</b></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Name">
                                <label asp-for="Description" class="form-label"><b>Description:</b></label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <input asp-for="Description" type="text" class="form-control" id="description" placeholder="Description">
                                <label class="form-label"><b>Coordinator:</b></label>
                                <span asp-validation-for="CoordinatorId" class="text-danger"></span>
                                <ejs-dropdownlist id="coordinator" ejs-for="CoordinatorId" dataSource="Model.Teachers" cssClass="e-filled" placeholder="@Model.Coordinator" popupHeight="230px" change="valueChange">
                                    <e-dropdownlist-fields text="Name" value="Id"></e-dropdownlist-fields>
                                </ejs-dropdownlist>
                                <div style="height:48px;"></div>
                                <div class="row">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-4">
                                        <label asp-for="BeginDate" class="form-label"><b>Begin Date:</b></label>
                                        <span asp-validation-for="BeginDate" class="text-danger"></span>
                                        <input asp-for="BeginDate" type="date" class="form-control" id="begin-date" placeholder="Begin Date">
                                    </div>
                                    <div class="col-md-2"></div>
                                    <div class="col-md-4">
                                        <label asp-for="EndDate" class="form-label"><b>End Date:</b></label>
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                        <input asp-for="EndDate" type="date" class="form-control" id="end-date" placeholder="End Date">
                                    </div>
                                    <div class="col-md-1"></div>
                                </div>
                            </div>
                            <!-- ##### About Us Area End ##### -->
                            <input asp-action="Edit" class="btn academy-btn mt-30" type="submit" value="Edit" style="margin-left:30%" />
                            <a asp-action="Index" class="btn academy-btn mt-30" style="margin-left:5%">Back</a>
                        </div>
                </form>
            </div>
        </section>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}