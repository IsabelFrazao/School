@model School.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb-area bg-img" style="background-image: url(../img/bg-img/breadcumb.jpg);">
    <div class="bradcumbContent">
        <h2>Login</h2>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->
<!-- ##### About Us Area Start ##### -->
<section class="about-us-area mt-50 section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center mx-auto wow fadeInUp" data-wow-delay="300ms">
                    <h3>Login</h3>
                </div>
            </div>
        </div>
        <section class="contact-area">
            <div class="contact-content">
                <form asp-action="Login" asp-controller="Accounts" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-12 col-md-3 wow fadeInUp" data-wow-delay="500ms"></div>
                        <div class="col-12 col-md-6 wow fadeInUp" data-wow-delay="500ms">
                            <br />
                            <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms" style="height:400px;">
                                <label class="form-label"><b>Username:</b></label>
                                <input asp-for="Username" type="email" class="form-control" id="name" placeholder="Username">
                                <label class="form-label"><b>Password:</b></label>
                                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                                <a><i>Forgot Password?</i></a>
                                <label class="form-label" style="color:transparent"><b>space</b></label>
                                <button asp-action="Login" class="btn academy-btn mt-30" type="submit" style="margin-left:30%">Login</button>
                            </div>
                        </div>
                        <!-- ##### About Us Area End ##### -->
                        <button asp-action="Register" class="btn academy-btn mt-30" style="margin-left:32%">Register</button>
                        <a asp-action="Index" class="btn academy-btn mt-30" style="margin-left:5%">Back</a>
                    </div>
                </form>
            </div>
        </section>
    </div>
</section>