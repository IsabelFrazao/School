@model School.Web.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb-area bg-img" style="background-image: url(../img/bg-img/breadcumb.jpg);">
    <div class="bradcumbContent">
        <h2>Reset Password</h2>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->
<!-- ##### About Us Area Start ##### -->
<section class="about-us-area mt-50 section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center mx-auto wow fadeInUp" data-wow-delay="300ms">
                    <h3>Reset Password</h3>
                </div>
            </div>
        </div>
        <section class="contact-area">
            <div class="contact-content">
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="All"></div>
                    <input type="hidden" asp-for="Token" />
                    <div style="text-align:center;">@ViewBag.Message</div>
                    <div style="height:3px;"><h6></h6></div>
                    <div class="row">
                        <div class="col-12 col-md-3 wow fadeInUp" data-wow-delay="500ms"></div>
                        <div class="col-12 col-md-6 wow fadeInUp" data-wow-delay="500ms">
                            <br />
                            <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms" style="height:370px;">
                                <label asp-for="UserName" class="form-label"><b>Username:</b></label>
                                <input asp-for="UserName" type="email" class="form-control" id="username" placeholder="Username">
                                <label asp-for="Password" class="form-label"><b>Password:</b></label>
                                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                                <label asp-for="ConfirmPassword" class="form-label"><b>Confirm Password:</b></label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirm" placeholder="Confirm Password">
                            </div>
                        </div>
                        <!-- ##### About Us Area End ##### -->
                        <button asp-action="ResetPassword" class="btn academy-btn mt-30" style="margin-left:31%">Reset Password</button>
                        <a asp-action="Index" class="btn academy-btn mt-30" style="margin-left:6%">Back</a>
                    </div>
                </form>
            </div>
        </section>
    </div>
</section>
