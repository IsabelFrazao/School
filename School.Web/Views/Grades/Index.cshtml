@model IEnumerable<School.Web.Data.Entities.Grade>

@{
    ViewData["Title"] = "Home";
}

<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb-area bg-img" style="background-image: url(../img/bg-img/breadcumb.jpg);">
    <div class="bradcumbContent">
        <h2>Search Grades</h2>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->
<!-- ##### About Us Area Start ##### -->
<section class="about-us-area mt-50 section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center mx-auto wow fadeInUp" data-wow-delay="300ms">
                    <h3>Search Grades</h3>
                </div>
            </div>
        </div>
        <section class="contact-area">
            <div class="contact-content">
                <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms">
                    <a asp-action="Create" class="btn academy-btn mt-30" style="margin-left:40%">Create New</a>
                    <div class="col-12 wow fadeInUp" data-wow-delay="500ms">
                        <h6><br /></h6>
                    </div>
                </div>
                <div class="contact-form-area wow fadeInUp" data-wow-delay="500ms">
                    <ejs-grid id="Grid" dataSource="@Model" allowSorting="true" allowFiltering="true" allowPaging="true">
                        <e-grid-filterSettings type="Menu"></e-grid-filterSettings>
                        <e-grid-columns>
                            <e-grid-column field="Id" headerText="Id" visible="false" textAlign="Center" width="120" type="number" isPrimaryKey="true"></e-grid-column>
                            @*<e-grid-column field="Field" headerText="Field" textAlign="Right" width="auto" type="string"></e-grid-column>*@
                            <e-grid-column field="Course.Name" headerText="Course" width="auto" type="string"></e-grid-column>
                            <e-grid-column field="Class.Name" headerText="Class" width="auto" type="string"></e-grid-column>
                            <e-grid-column field="Subject.Name" headerText="Subject" width="auto" type="string"></e-grid-column>
                            @*<e-grid-column field="Teacher.FullName" headerText="Teacher" textAlign="Right" width="auto" type="string"></e-grid-column>*@
                            <e-grid-column field="Student.FullName" headerText="Student" width="auto" type="string"></e-grid-column>
                            <e-grid-column field="FinalGrade" headerText="Final Grade" width="auto" type="number"></e-grid-column>
                            <e-grid-column field="Approval" headerText="Approval" width="auto" type="string"></e-grid-column>
                            @*<e-grid-column template="#template" textAlign="Right" width="auto"></e-grid-column>*@
                        </e-grid-columns>
                    </ejs-grid>
                </div>
            </div>
        </section>
    </div>
</section>

<script id="template" type="text/x-template">
    <div>
        <a href='/Grades/Edit/${Id}'>Edit</a> |
        <a href='/Grades/Details/${Id}'>Details</i></a> |
        <a href='/Grades/Delete/${Id}'>Delete</a>
    </div>
</script>